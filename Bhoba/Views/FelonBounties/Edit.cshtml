@model Bhoba.Models.FelonBounty

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Bailbond</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FelonBountyId" />
            <div class="form-group">
                <label asp-for="BountyAmount" class="control-label"></label>
                <input asp-for="BountyAmount" class="form-control" />
                <span asp-validation-for="BountyAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoliceReportNumber" class="control-label"></label>
                <input asp-for="PoliceReportNumber" class="form-control" />
                <span asp-validation-for="PoliceReportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrimeType" class="control-label"></label>
                <input asp-for="CrimeType" class="form-control" />
                <span asp-validation-for="CrimeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BondClosed" /> @Html.DisplayNameFor(model => model.BondClosed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
