@model Bhoba.Models.FelonViewModel.FelonDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Felon</h4>
    <div class="container">
        <div>
            <div class="col-md-6" style="height: 300px;">
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Felon.FirstName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Felon.FirstName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Felon.LastName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Felon.LastName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Felon.DateOfBirth)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Felon.DateOfBirth)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Felon.Alias)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Felon.Alias)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6" style="height: 300px;">
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BailBondsmen.Single().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Felon.FelonBounties.Single().BountyAmount)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            Open Bonds
                            @foreach (var item in Model.Felon.FelonBounties)
                            {
                                if (item.BondClosed == false)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BailBondsman.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BountyAmount)
                                        </td>
                                        <td>
                                            <a asp-controller="FelonBounties" asp-action="Edit" asp-route-id="@item.FelonBountyId">Edit</a> |
                                            <a asp-controller="FelonBounties" asp-action="Details" asp-route-id="@item.FelonBountyId">Details</a> |
                                            <a asp-controller="FelonBounties" asp-action="Delete" asp-route-id="@item.FelonBountyId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BailBondsmen.Single().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Felon.FelonBounties.Single().BountyAmount)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            Closed Bonds
                            @foreach (var item in Model.Felon.FelonBounties)
                            {
                                if (item.BondClosed == true)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BailBondsman.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BountyAmount)
                                        </td>
                                        <td>
                                            <a asp-controller="FelonBounties" asp-action="Edit" asp-route-id="@item.FelonBountyId">Edit</a> |
                                            <a asp-controller="FelonBounties" asp-action="Details" asp-route-id="@item.FelonBountyId">Details</a> |
                                            <a asp-controller="FelonBounties" asp-action="Delete" asp-route-id="@item.FelonBountyId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6" style="height: 300px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Addresses.Single().StreetAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Addresses.Single().City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Addresses.Single().State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Addresses.Single().ZipCode)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Addresses)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StreetAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                </td>
                                <td>
                                    <a asp-controller="Addresses" asp-action="Edit" asp-route-id="@item.AddressId">Edit</a> |
                                    <a asp-controller="Addresses" asp-action="Details" asp-route-id="@item.AddressId">Details</a> |
                                    <a asp-controller="Addresses" asp-action="Delete" asp-route-id="@item.AddressId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6" style="height: 300px;">
                <img src="http://www.bing.com/sa/simg/maps_opengraph.png" alt="Image result for bing map" width="256" height="256">
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-controller="Addresses" asp-action="Create" asp-route-id="@Model.Felon.FelonId">Add Address</a> |
    <a asp-controller="FelonBounties" asp-action="Create" asp-route-id="@Model.Felon.FelonId">Add BailBond</a> |
    <a asp-action="Edit" asp-route-id="@Model.Felon.FelonId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
